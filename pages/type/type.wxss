.inp{
  width: 100%;
  height: 10%;
  background: #f5f5f5;
  position: fixed;
  opacity: 1;
  top: 0;
  left: 0;
  z-index: 99;
}
.null_text{
  width: 100%;
  display: block;
  height: 20%;
}
.inp_inp{
  background: #fff;
  display: block;
  width: 92%;
  height: 60%;
  font-size: 28rpx;
  color: #676767;
  padding-left: 2%;
  border-radius: 10rpx;
  margin:0 0 0 3%;
}
.type_box{
  position: fixed;
  top: 10%;
  left: 0;
  width: 100%;
  height: 90%;
}
.left{
  width: 27%;
  height: 100%;
  float: left;
}
.classtype{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
}
.left_type{
  text-align: center;
  color: #333;
  border-bottom: solid 1px #ddd;
  border-right: solid 1px #ddd;
  box-sizing: border-box;
}
.left_type_hover{
  border-left: solid 3px #f75e25;
  border-bottom: solid 1px #ddd;
  text-align: center;
  color: #f75e25;
}
.right{
  width: 73%;
  float: left;
  height: 100%;
}
.right_type{
  padding-left: 15%;
  color: #333;
}
.span{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  border-radius: 3px; 
  margin-left: 35rpx;
  margin-top: 30rpx;
}
.gray{
  background: darkgray;
}
.orange{
   background: orangered;
}
.yellow{
   background: orange;
}
.blue{
  background: deepskyblue;
}
/*隐藏滚动条*/
::-webkit-scrollbar{width:0px}