/**index.wxss**/

.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  float: left;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.banner {
  width: 100%;
  height: 350rpx;
  background: #58ab22;
  float: left;
}

.top_banner {
  width: 90%;
  height: 70rpx;
  background: rgb(255, 255, 255);
  position: absolute;
  margin-left: 5%;
  top: 0;
  border-radius: 10rpx;
}

.sous_logo {
  width: 40rpx;
  height: 35rpx;
  position: absolute;
  left: 26%;
  margin-top: 17rpx;
  top: 0;
}

.sous_p {
  display: block;
  width: 100%;
  line-height: 70rpx;
  color: #676767;
  text-align: center;
  font-size: 28rpx;
}

.phone_btn {
  width: 92%;
  margin: 30rpx 4%;
  float: left;
}

.nav_otherlocal {
  float: left;
  background: #fff;
  border-radius: 10rpx;
}

.nav_local {
  float: right;
  background: #58ab22;
  color: #fff;
  border-radius: 10rpx;
}

.local {
  width: 46%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
}

.adress {
  float: left;
  width: 80%;
  height: 55rpx;
  padding: 0 10%;
  background: #fff;
}

.adr_img {
  width: 40rpx;
  height: 54rpx;
}

.hot {
  width: 94%;
  margin-left: 3%;
  border-radius: 7px;
  background: #fff;
  float: left;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}

.hot_font {
  width: 100%;
  display: block;
  text-align: center;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: solid 1px #e8e9ea;
  font-size: 31rpx;
  margin-bottom: 30rpx;
}

.scroll_view {
  white-space: nowrap;
  display: flex;
}

.viewBox {
  width: 280rpx;
  display: inline-block;
}

.go_rep {
  width: 100%;
  height: 100%;
  display: block;
}

.hot_Img {
  width: 280rpx;
  height: 225rpx;
  float: left;
  margin-bottom: 30rpx;
}

.hot_type {
  width: 100%;
  text-align: center;
  line-height: 40rpx;
  float: left;
  font-size: 26rpx;
  color: #333;
}

.hot_price {
  width: 100%;
  text-align: center;
  float: left;
  font-size: 26rpx;
  color: #333;
}

.hot_price text {
  color: red;
  font-size: 26rpx;
}

.hot_hs {
  display: block;
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background: #66c428;
  text-align: center;
  float: left;
  margin: 20rpx 0 0 10%;
  color: #fff;
  border-radius: 5px;
}

.swp_img {
  width: 100%;
  height: 110rpx;
  float: left;
}

.swp {
  width: 25%;
  height: 140rpx;
  float: left;
  display: inline-block;
}

.swp_name {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  line-height: 30rpx;
  float: left;
  color: #676767;
}

swiper {
  height: 360rpx;
}

.video{
  width: 90%;
  margin-left: 5%;
  height: 360rpx;
}